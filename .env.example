# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tastemate?retryWrites=true&w=majority

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Development/Production Settings
NODE_ENV=development

# Optional: Alternative environment variable names for API keys
OPENAI_API_KEY_ENV_VAR=sk-your-openai-api-key-here
API_KEY=sk-your-openai-api-key-here

# Database URL (for compatibility with existing drizzle config)
DATABASE_URL=your-database-url-if-using-postgresql

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Replit Configuration (if deploying on Replit)
REPLIT_DOMAINS=your-replit-domain.repl.co

# Security Settings
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Admin Default Credentials (change after first setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=*

# File Upload (if needed)
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration (if needed for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Redis Configuration (if needed for caching)
REDIS_URL=redis://localhost:6379

# Webhook URLs (if integrating with external services)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_URL=https://your-app.com/webhook

# Analytics (if needed)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Social Media Integration (if needed)
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
INSTAGRAM_CLIENT_ID=your-instagram-client-id

# Push Notifications (if needed)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@domain.com

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Feature Flags
ENABLE_CHAT_HISTORY=true
ENABLE_USER_PROFILES=false
ENABLE_RECOMMENDATION_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_NOTIFICATIONS=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es

# Image Processing (if needed)
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=800

# Search Configuration
SEARCH_RESULTS_LIMIT=20
SEARCH_FUZZY_THRESHOLD=0.8

# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Development Tools
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=false
ENABLE_API_DOCS=true
